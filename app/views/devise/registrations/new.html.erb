<div class="signup-page">
  <div class="signup-container">
    <div class="signup-box">
      <h2 class="signup-heading">Sign Up</h2>

    <% if resource.errors.any? %>
        <div class="signup-errors">
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: 'signup-form-label' %>
    <%= f.email_field :email, autofocus: true, class: 'form-control signup-form-input', placeholder: "Enter email" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'signup-form-label' %>
    <%= f.password_field :password, class: 'form-control signup-form-input', placeholder: "Password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm Password", class: 'signup-form-label' %>
    <%= f.password_field :password_confirmation, class: 'form-control signup-form-input', placeholder: "Confirm Password" %>
  </div>

  <%= f.submit "Sign up", class: "signup-button" %>
<% end %>


      <div class="signup-links">
        <p>Already have an account?
          <a href="/users/sign_in" class="signup-link">Login here</a>
        </p>
      </div>
    </div>
  </div>
</div>
