<div class="login-container">
  <div class="login-box">
    <h2 class="login-heading">Login to your account</h2>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div>
        <%= f.label :email, class: "login-form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-form-input" %>
      </div>

      <div>
        <%= f.label :password, class: "login-form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "login-form-input" %>
      </div>

      <div>
        <%= f.submit "Log in", class: "login-button" %>
      </div>
    <% end %>

    <div class="login-links">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "login-link" %><br>
      <%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: "login-link" %>
    </div>
  </div>
</div>
