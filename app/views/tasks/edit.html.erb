<div class="edit-wrapper">
  <div class="edit-card">
    <h1>Edit Task</h1>

    <%= form_with(model: @task, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :title %><br>
        <%= form.text_field :title %>
      </div>

      <div class="form-group">
        <%= form.label :description %><br>
        <%= form.text_area :description %>
      </div>
    <div class="form-group">
  <%= form.label :priority, "Priority" %><br>
 <%= form.select :priority, options_for_select([['High', 'high'], ['Medium', 'medium'], ['Low', 'low']], form.object.priority), {}, class: "priority-select" %>

</div>
<div class="form-group">
  <%= form.label :due_date, "Due Date" %><br>
  <%= form.date_field :due_date, class: "date-select" %>
</div>

      <div class="form-group">
        <%= form.submit "Update Task" %>
      </div>
    <% end %>

    <%= link_to 'Back', tasks_path %>
  </div>
</div>
