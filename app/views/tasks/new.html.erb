<div class="edit-wrapper">
  <div class="edit-card">
    <h1 style="text-align: center; margin-bottom: 20px;">New Task</h1>

    <%= form_with model: @task, local: true do |form| %>
      <div class="form-group">
        <%= form.label :title, "Task Title" %><br>
        <%= form.text_field :title, required: true %>
      </div>

      <div class="form-group">
        <%= form.label :description, "Task Description" %><br>
        <%= form.text_area :description %>
      </div>
  <div class="form-group">
  <%= form.label :priority, "Priority" %><br>
  <%= form.select :priority, 
        options_for_select([['High', 'high'], ['Medium', 'medium'], ['Low', 'low']], @task.priority), 
        {}, 
        class: "priority-select" %>
</div>
<div class="form-group">
  <%= form.label :due_date, "Due Date" %><br>
  <%= form.date_field :due_date, class: "date-select" %>
</div>

      <div class="form-group">
        <%= form.submit "Create Task" %>
      </div>
    <% end %>

    <div style="text-align: center; margin-top: 10px;">
      <%= link_to "Back to Tasks", tasks_path %>
    </div>
  </div>
</div>
