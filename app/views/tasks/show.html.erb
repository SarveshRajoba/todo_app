<h1>Task Details</h1>

<p>
    <strong>Title:</strong>
    <%= @task.title %>
</p>

<p>
    <strong>Description:</strong>
    <%= @task.description %>
</p>

<p>
    <strong>Status:</strong>
    <%= @task.completed? ? "Completed" : "Incomplete" %>
</p>

<%= link_to 'Edit Task', edit_task_path(@task), class: 'btn btn-primary' %>
<%= link_to 'Back to Tasks', tasks_path, class: 'btn btn-secondary' %>